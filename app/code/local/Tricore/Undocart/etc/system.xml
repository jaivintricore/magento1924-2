<?xml version="1.0"?>
<config>
    <tabs>
        <undocart translate="label" module="undocart">
            <label>Tricore</label>
            <sort_order>400</sort_order>
        </undocart>
    </tabs>
     
    <sections>
        <undocart_options translate="label" module="undocart">
            <label>Undocart Configuration Settings</label>
            <tab>undocart</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>				
				<section_one translate="label">
					<label>Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>                
					<fields>
						<enabledisable>
							<label>Enable</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>for enable module yes</comment>                                              
						</enabledisable>
					</fields>
				</section_one>
                <section_two translate="label">
                    <label>Undocart Messages</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>                
                    <fields>
						<addcart_msg>
                            <label>Add Message</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store> 
                            <comment>after product added back to cart 
                            for e.g {product_name} added sucessfully
                            </comment>                            
                        </addcart_msg>
                        <remove_msg>
                            <label>Remove Message</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>click on remove item in cart that message will display with undo link
                           
                            </comment>                           
                        </remove_msg>
                        <emptycart_msg>
                            <label>Empty Cart Remove</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Click on empty cart that message will display with undo link</comment>                           
                        </emptycart_msg>
                        <add_emptycart_msg>
                            <label>Empty Cart Add message</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>after all cart items added successfully</comment>                                                   
                        </add_emptycart_msg>
                        <error_msg>
                            <label>Error Message</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>if something wrong with cart to display error message</comment>                         
                        </error_msg>
                        <undotext_msg>
                            <label>Undo Text</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>frontend text on click that undo cart action will performed</comment>                          
                        </undotext_msg>
                    </fields>
                </section_two>
            </groups>                
        </undocart_options>
    </sections>
</config>
