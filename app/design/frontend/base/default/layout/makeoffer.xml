<layout version="0.1.0">
	<catalog_product_view>
		<reference name="head"> 
			<action method="addItem" ifconfig="makeoffer/general/enable_makeoffer"><type>skin_js</type><name>js/makeoffer/make-an-offer.js</name></action>         
			<action method="addItem" ifconfig="makeoffer/general/enable_makeoffer"><type>skin_css</type><name>css/makeoffer/make-an-offer.css</name></action> 
		 </reference>
	   <reference name="content">
			<block type="catalog/product_view"  name="makeoffer_form" template="makeoffer/form.phtml" />
	   </reference>
	   <reference name="product.info.addtocart">
			<block type="catalog/product_view"  name="makeoffer_button" template="makeoffer/button.phtml" />
		</reference>
	</catalog_product_view>
</layout>
